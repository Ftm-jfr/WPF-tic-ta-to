<Window x:Class="tic_toc_to.Tic_Tac_To"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tic_toc_to"
        mc:Ignorable="d"
        Title="tic_tac_to" Height="500" Width="500">
    <Grid x:Name="Template">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Name="Turn" Grid.Row="0" HorizontalAlignment="Left" FontSize="18" Margin="5" VerticalAlignment="Center" FontFamily="Arial Narrow"/>
        <Button Grid.Row="0" Grid.Column="2" Click="Start" Background="#FFF88321" FontSize="18">ReStart</Button>

        <Button Grid.Column="0" Grid.Row="1" Name="b1" Content="1" FontSize="32" Click="Button_Click" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFB5EBED"></Button>
        <Button Grid.Column="1" Grid.Row="1" Name="b2" Content="2" FontSize="32" Click="Button_Click" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFB5EBED"></Button>
        <Button Grid.Column="2" Grid.Row="1" Name="b3" Content="3" FontSize="32" Click="Button_Click" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFB5EBED"></Button>
        <Button Grid.Column="0" Grid.Row="2" Name="b4" Content="4" FontSize="32" Click="Button_Click" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFB5EBED"></Button>
        <Button Grid.Column="1" Grid.Row="2" Name="b5" Content="5" FontSize="32" Click="Button_Click" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFB5EBED"></Button>
        <Button Grid.Column="2" Grid.Row="2" Name="b6" Content="6" FontSize="32" Click="Button_Click" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFB5EBED"></Button>
        <Button Grid.Column="0" Grid.Row="3" Name="b7" Content="7" FontSize="32" Click="Button_Click" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFB5EBED"></Button>
        <Button Grid.Column="1" Grid.Row="3" Name="b8" Content="8" FontSize="32" Click="Button_Click" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFB5EBED"></Button>
        <Button Grid.Column="2" Grid.Row="3" Name="b9" Content="9" FontSize="32" Click="Button_Click" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFB5EBED"></Button>

    </Grid>
</Window>
